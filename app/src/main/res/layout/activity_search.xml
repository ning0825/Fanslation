<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SearchActivity">

    <ListView
        android:id="@+id/lv_associate"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/et_input_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:stackFromBottom="true">
    </ListView>

    <EditText
        android:id="@+id/et_input_search"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_input"
        android:padding="10dp"
        android:transitionName="search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bt_submit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_bt_send"
        app:layout_constraintBottom_toBottomOf="@+id/et_input_search"
        app:layout_constraintEnd_toEndOf="@+id/et_input_search"
        app:layout_constraintTop_toTopOf="@+id/et_input_search"
        app:layout_constraintDimensionRatio="1:1"/>

</android.support.constraint.ConstraintLayout>